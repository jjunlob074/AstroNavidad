<script type="module">
  window.addEventListener('load', () => {
    const canvas = document.getElementById('snowCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  
    const snowflakes = [];
    const snowAccumulation = Array(canvas.width).fill(0); // Mantener la acumulaci贸n de nieve por cada columna
    const maxSnowflakes = 50;
    const waveAmplitude = 5; // Amplitud de las olas
    const waveFrequency = 0.01; // Frecuencia de las olas
    const waveSpeed = 0.0005; // Velocidad de las olas
    const maxHeight = 100; // Altura m谩xima que puede alcanzar la acumulaci贸n
  
    let waveHeightOffset = - 50; // Desplazamiento de la ola que sube
  
    // Crear un copo de nieve con par谩metros aleatorios
    function createSnowflake() {
      const x = Math.random() * canvas.width;
      const y = Math.random() * canvas.height;
      const radius = Math.random() * 10 + 2; // Mayor tama帽o de copos para un efecto m谩s visible
      const speed = Math.random() * 1 + 0.7; // Velocidad de ca铆da
      const opacity = Math.random() * 0.4 + 0.6; // Opacidad aleatoria para dar realismo
      const depth = 1; // Profundidad para el efecto 3D (m谩s bajo es m谩s cercano)
      snowflakes.push({ x, y, radius, speed, opacity, depth });
    }
  
    // Dibujar la acumulaci贸n de nieve con forma de olita
    function drawWave() {
      ctx.fillStyle = 'rgba(255, 255, 255)';
      ctx.beginPath();
      // Dibujar la olita en la base
      for (let i = 0; i < canvas.width; i++) {
        const waveHeight = Math.sin(i * waveFrequency + Date.now() * waveSpeed) * waveAmplitude;
        const snowHeight = snowAccumulation[i];
        // Desplazar la ola hacia arriba a medida que pasa el tiempo, hasta un l铆mite
        const yPos = canvas.height - waveHeight - snowHeight - 50 - waveHeightOffset; // Ubicaci贸n de la olita con acumulaci贸n
        ctx.lineTo(i, yPos);
      }
      ctx.lineTo(canvas.width, canvas.height); // Cerrar el camino
      ctx.lineTo(0, canvas.height); // Cerrar el camino
      ctx.fill();
    }

    // Dibujar los copos de nieve y el efecto de acumulaci贸n
    function drawSnowflakes() {
      ctx.clearRect(0, 0, canvas.width, canvas.height); // Limpiar el canvas
  
      // Dibujar la acumulaci贸n de nieve con la olita
      drawWave();
  
      // Dibujar los copos de nieve
      snowflakes.forEach(snowflake => {
        const scale = snowflake.depth; // La "profundidad" controla el tama帽o visual del copo
  
        ctx.fillStyle = `rgba(255, 255, 255, ${snowflake.opacity})`;
        ctx.beginPath();
        ctx.arc(snowflake.x, snowflake.y, snowflake.radius * scale, 0, Math.PI * 2);
        ctx.fill();
  
        // Mover los copos de nieve con la simulaci贸n 3D
        snowflake.y += snowflake.speed; // El movimiento en Y depende de la profundidad
  
        // Si el copo llega al fondo, acumularlo en la zona correspondiente
        if (snowflake.y > canvas.height) {
          snowflake.y = -snowflake.radius; // Reiniciar la posici贸n vertical del copo
          snowflake.x = Math.random() * canvas.width; // Reiniciar la posici贸n horizontal
        }
      });
    }

    // Animaci贸n
    function animate() {
      // Incrementar el desplazamiento de la ola (hasta el l铆mite)
      if (waveHeightOffset < maxHeight) {
        waveHeightOffset += 0.2; // Controlar la velocidad de subida
      }

      drawSnowflakes();
      requestAnimationFrame(animate);
    }

    // Crear nieve al cargar la p谩gina
    for (let i = 0; i < maxSnowflakes; i++) {
      createSnowflake();
    }
  
    animate();
  });
</script>

